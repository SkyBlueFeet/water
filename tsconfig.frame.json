{
    "compilerOptions": {
        "moduleResolution": "node",
        "noEmitOnError": true,
        "declaration": false,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "module": "CommonJS",
        "target": "ES6",
        "alwaysStrict": true,
        "importHelpers": true,
        "incremental": true,
        "sourceMap": false,
        "baseUrl": "./",
        "outDir": "output",
        "noEmit": false,
        "lib": ["ES2015", "ES2016", "ES2017"],
        "types": ["node", "webpack"]
    },
    "include": [
        "router",
        "script",
        "frame",
        "mysql",
        "handler",
        "public",
        "views"
    ],
    "exclude": ["node_modules", "dist", ".*"]
}
