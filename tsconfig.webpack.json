{
    "compilerOptions": {
        "moduleResolution": "node",
        "noEmitOnError": true,
        "jsx": "preserve",
        "jsxFactory": "h",
        "removeComments": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "module": "ESNext",
        "target": "es5",
        "alwaysStrict": true,
        "incremental": true,
        "sourceMap": true,
        "baseUrl": ".",
        "noEmit": false,
        "lib": ["ES2015", "ES2016", "ES2017", "ESNext", "DOM"],
        "types": ["node", "webpack", "webpack-env", "vue", "lodash"]
    },
    "include": ["declare", "src"],
    "exclude": ["node_modules"]
}
